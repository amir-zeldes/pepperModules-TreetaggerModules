<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.hu_berlin.german.korpling.saltnpepper.pepperModules</groupId>
  <artifactId>TreetaggerModules</artifactId>
  <version>1.2.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <repositories>
    <repository>
      <id>SaltNPepper Repository</id>
            <url>https://korpling.german.hu-berlin.de/~annis/maven2/saltnpepper/</url>
    </repository>
  </repositories>
  <parent>
  	<groupId>de.hu_berlin.german.korpling.saltnpepper.pepperModules</groupId>
  	<artifactId>PepperParentModule</artifactId>
  	<version>0.0.1</version>
  </parent>
  <dependencies>
    <dependency>
  	  <groupId>de.hu_berlin.german.korpling.saltnpepper.misc</groupId>
  	  <artifactId>TreetaggerModel</artifactId>
  	  <version>1.2.0</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
    <dependency>
      <groupId>com.artofsolving</groupId>
      <artifactId>jodconverter</artifactId>
      <version>2.2.1</version>
    </dependency>    
  </dependencies>        
   <scm>
        <developerConnection>scm:svn:https://korpling.german.hu-berlin.de/svn/saltnpepper/PepperModules/TreetaggerModules/trunk</developerConnection>
    </scm>
  <build>
  	<plugins>
  	<plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <tagBase>
            https://korpling.german.hu-berlin.de/svn/saltnpepper/PepperModules/TreetaggerModules/tags
          </tagBase>
          <releaseProfiles>release</releaseProfiles>
      		<goals>deploy assembly:single</goals>
        </configuration>
      </plugin>

     <plugin>
        <groupId>com.artofsolving</groupId>
        <artifactId>jodconverter-maven-plugin</artifactId>
        <version>2.2.1</version>
         <configuration>
           <sourceDirectory>${basedir}/src/odt</sourceDirectory>
           <outputDirectory>${basedir}/doc/manual</outputDirectory>
           <include>**/*.odt</include>
           <outputFormat>pdf</outputFormat>
         </configuration>
         <executions>
           <execution>
             <id>convert </id>
             <phase>site</phase>
             <goals>
               <goal>convert</goal>
             </goals>
           </execution>
         </executions>
      </plugin>	
	
	
	</plugins>
  </build>
  
</project>